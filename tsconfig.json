{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "baseUrl": ".",
    "paths": {
      "@codexsun/cortex": ["cortex/index.ts"],
      "@codexsun/cortex/*": ["cortex/*"]
    },

    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": [
    "index.ts",
    "cortex/**/*.ts",
    "apps/**/*.ts"
  ]
}
